<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="root" fx:controller="Controller"
            styleClass="border">

    <ImageView fx:id="card1" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
    <ImageView fx:id="card2" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"/>
    <ImageView fx:id="card3" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
    <ImageView fx:id="card4" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0"/>



    <!-- Centered VBox to hold the title and buttons -->
    <VBox fx:id="box" alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="1.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" styleClass="vbox">

        <Label fx:id="welcomeText" text="WELCOME TO 3 CARD POKER" styleClass="welcomeLabel"/>


        <!-- Play Button -->
        <Button fx:id="startButton" text="PLAY" onAction="#handlePlay"  prefWidth="200" prefHeight="40" styleClass="start"/>

        <!-- Exit Button -->
        <Button fx:id="exitButton" text="EXIT" onAction="#handleExit"  prefWidth="120" prefHeight="40" styleClass="exit"/>
    </VBox>
</AnchorPane>
